export sound11 = ^<学习>(&<sound_animal>)<叫>?的?(<声音>|<叫声>|<叫>)<播放操作>?<结尾礼貌>?$ => request(sounder="$1", intent="sound") <1.0>;
export sound11 = ^<你知道>?(&<sound_animal>)<是怎么><叫>的?<结尾礼貌>?$ => request(sounder="$1", intent="sound") <1.0>;

